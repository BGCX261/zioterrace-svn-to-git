	/**
	 *  Embed 된 이미지를 BitmapData로 재생성 시켜주는 메서드
	 */
	public static function generateBitmapData(source:Object):BitmapData
	{
		var display:DisplayObject;
		
		if (source is Class)
		{
			display = new source();
		}
		else if (source is DisplayObject)
		{
			display = DisplayObject(source);
		}
		else
		{
			return null;
		}
		
		var bitmap:BitmapData = new BitmapData(display.width, display.height, true, 0x00FFFFFF);
		bitmap.draw(display);
		
		return bitmap;
	}
